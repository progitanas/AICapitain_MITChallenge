# AICaptain Environment Configuration
# Copy this file to .env and customize values

# Environment
ENVIRONMENT=development
DEBUG=true

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0
LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000

# Nginx Configuration
NGINX_PORT_HTTP=80
NGINX_PORT_HTTPS=443

# Application Settings
APP_NAME=AICaptain
APP_VERSION=1.0.0
APP_DESCRIPTION=Maritime Route Optimization Platform

# API Configuration
API_BASE_URL=http://localhost:8000/api/v1
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# AIS Configuration
AIS_DATA_PATH=./backend/ais_data.json
AIS_UPDATE_INTERVAL=30

# Database (if using PostgreSQL in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/aicaptain
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# Authentication (future)
# JWT_SECRET_KEY=your-secret-key-change-in-production
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION=3600

# Logging
LOG_FORMAT=json
LOG_OUTPUT=console
LOG_FILE_PATH=./logs/aicaptain.log
LOG_MAX_SIZE=100MB
LOG_RETENTION_DAYS=30

# Feature Flags
FEATURE_LIVE_TRACKING=true
FEATURE_FORECASTING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_EXPORT_REPORTS=true

# Performance
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
CACHE_ENABLED=true
CACHE_TTL=300

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600
ALLOWED_HOSTS=localhost,127.0.0.1

# HTTPS/SSL (production only)
# SSL_ENABLED=false
# SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# Monitoring & Alerting
ENABLE_METRICS=true
METRICS_PORT=9090
ALERT_EMAIL=admin@aicaptain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# File Upload
MAX_UPLOAD_SIZE=52428800  # 50MB
UPLOAD_DIR=./uploads
ALLOWED_UPLOAD_TYPES=json,csv,xlsx

# Deployment
DOCKER_REGISTRY=aicaptain
DOCKER_IMAGE_TAG=latest
REPLICAS=1
